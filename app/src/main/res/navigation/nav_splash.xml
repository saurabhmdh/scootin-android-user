<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_splash"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.scootin.view.fragment.home.SplashFragment"
        android:label="">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/login"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.scootin.view.fragment.home.LoginFragment"
        android:label="">
        <action
            android:id="@+id/action_login_to_webview"
            app:destination="@id/webview"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/action_login_to_service_area"
            app:destination="@id/selectServiceArea"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/webview"
        android:name="com.scootin.view.fragment.home.BrowserFragment"
        android:label="">
        <argument android:name="url" app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/selectServiceArea"
        android:name="com.scootin.view.fragment.home.SelectServiceAreaFragment"
        android:label=""/>

</navigation>