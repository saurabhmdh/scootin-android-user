<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account"
    app:startDestination="@id/account_fragment">

    <fragment
        android:id="@+id/account_fragment"
        android:name="com.scootin.view.fragment.account.AccountFragment"
        android:label="Home">

        <action
            android:id="@+id/account_to_cart_fragment"
            app:destination="@id/cart_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/account_to_orders_fragment"
            app:destination="@id/order_history_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/account_to_support_fragment"
            app:destination="@id/support_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/account_to_address_fragment"
            app:destination="@id/address_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/action_login_to_webview"
            app:destination="@id/webview"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/address_fragment"
        android:name="com.scootin.view.fragment.account.address.AddressFragment"
        android:label="Account" >
        <deepLink app:uri="user.scootin.com/open-address" />

        <action
            android:id="@+id/address_fragment_to_add_new"
            app:destination="@id/address_add_new"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/address_add_new"
        android:name="com.scootin.view.fragment.account.address.AddorModifyNewAddressFragment"
        android:label="" >
        <argument
            android:name="addressDetail"
            app:argType="com.scootin.network.response.AddressDetails"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/order_history_fragment"
        android:name="com.scootin.view.fragment.orders.OrderHistoryFragment">
        <action
            android:id="@+id/order_to_track_fragment"
            app:destination="@id/track_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim">
            <argument
                android:name="orderId"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/inorder_to_track_fragment"
            app:destination="@id/inorder_track_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim">
            <argument
                android:name="orderId"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/citywide_to_track_fragment"
            app:destination="@id/citywide_track_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim">
            <argument
                android:name="orderId"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/change_payment_mode"
        android:name="com.scootin.view.fragment.account.payment.ChangePaymentMethodFragment">
    <!--        adb shell am start -a android.intent.action.VIEW -d "https://user.scootin.com/order-detail-direct/18613"-->

    <argument
        android:name="orderId"
        app:argType="string" />

        <argument
            android:name="orderType"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/track_fragment"
        android:name="com.scootin.view.fragment.account.orders.DirectOrderDetailFragment">
        <!--        adb shell am start -a android.intent.action.VIEW -d "https://user.scootin.com/order-detail-direct/18613"-->
        <deepLink app:uri="user.scootin.com/order-detail-direct/{orderId}" />
        <argument
            android:name="orderId"
            app:argType="string" />
        <action
            android:id="@+id/order_to_customerSupport"
            app:destination="@id/support_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/direct_order_to_payment"
            app:destination="@id/payment_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/direct_order_to_change_payment_mode"
            app:destination="@id/change_payment_mode"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/direct_order_to_cancel_order"
            app:destination="@id/cancel_order_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/cancel_order_fragment"
        android:name="com.scootin.view.fragment.orders.CancelOrderFragment"/>

    <fragment
        android:id="@+id/inorder_track_fragment"
        android:name="com.scootin.view.fragment.account.orders.OrderDetailFragment">
        <!--        adb shell am start -a android.intent.action.VIEW -d "https://user.scootin.com/order-detail/18613"-->
        <deepLink app:uri="user.scootin.com/order-detail/{orderId}" />
        <argument
            android:name="orderId"
            app:argType="string" />
        <action
            android:id="@+id/inorder_to_customerSupport"
            app:destination="@id/support_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/order_to_cancel_order"
            app:destination="@id/cancel_order_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/order_to_change_payment_mode"
            app:destination="@id/change_payment_mode"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/citywide_track_fragment"
        android:name="com.scootin.view.fragment.account.orders.CityWideOrderDetailFragment">
        <!--        adb shell am start -a android.intent.action.VIEW -d "https://user.scootin.com/order-detail/18613"-->

        <argument
            android:name="orderId"
            app:argType="string" />
        <action
            android:id="@+id/citywide_to_customerSupport"
            app:destination="@id/support_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />
        <action
            android:id="@+id/city_wide_order_to_payment"
            app:destination="@id/payment_fragment"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />

        <action
            android:id="@+id/city_wide_order_to_change_payment"
            app:destination="@id/change_payment_mode"
            app:enterAnim="@anim/default_enter_anim"
            app:exitAnim="@anim/default_exit_anim"
            app:popEnterAnim="@anim/default_pop_enter_anim"
            app:popExitAnim="@anim/default_pop_exit_anim" />
    </fragment>


    <fragment
        android:id="@+id/cart_fragment"
        android:name="com.scootin.view.fragment.account.cards.CardFragment"
        android:label="Account" />

    <fragment
        android:id="@+id/support_fragment"
        android:name="com.scootin.view.fragment.account.support.SupportFragment"
        android:label="Account" />

    <fragment
        android:id="@+id/payment_fragment"
        android:name="com.scootin.view.fragment.account.payment.PaymentFragment"
        android:label="">
        <argument
            android:name="orderId"
            app:argType="string" />
        <argument
            android:name="orderType"
            app:argType="string" />

        <argument
            android:name="express"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/webview"
        android:name="com.scootin.view.fragment.home.BrowserFragment"
        android:label="">
        <argument android:name="url" app:argType="string" />
    </fragment>
</navigation>
