<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="custom_font_style_red" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/mons_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="custom_font_style_white" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/mons_medium</item>
        <item name="android:textColor">@color/color_white</item>
    </style>


    <style name="button_red" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/mons_medium</item>
        <item name="android:background">@drawable/gradient_button</item>
    </style>

</resources>
