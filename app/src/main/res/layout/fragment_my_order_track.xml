<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="data"
            type="com.scootin.network.response.inorder.InOrderDetail"/>

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_top_banner_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:drawableStart="@drawable/ic_back"
                android:textAlignment="center"
                android:text="Track Order"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/top_band"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_rectancle_2dp"
                    android:backgroundTint="#008194"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/OrderID"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        app:setToIntText="@{data.orderDetails.id}" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/help_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_help_button" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/order_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_order_id"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order_status_string"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/order_has_been_placed"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat_bold"
                    android:background="@drawable/rounded_rectancle_2dp"
                    android:backgroundTint="@color/base_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/top_band" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/place_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/selector_placed_order"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/order_status_string" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/progressId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_marginTop="43dp"

                    app:layout_constraintEnd_toStartOf="@+id/packed_icon"
                    app:layout_constraintStart_toEndOf="@id/place_icon"
                    app:layout_constraintTop_toBottomOf="@id/order_status_string" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/packed_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/selector_packed_order"
                    app:layout_constraintEnd_toStartOf="@+id/progressId2"
                    app:layout_constraintStart_toEndOf="@id/progressId"
                    app:layout_constraintTop_toBottomOf="@id/order_status_string" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/progressId2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_marginTop="43dp"

                    app:layout_constraintEnd_toStartOf="@+id/dispatched_icon"
                    app:layout_constraintStart_toEndOf="@id/packed_icon"
                    app:layout_constraintTop_toBottomOf="@id/order_status_string" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dispatched_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/selector_dispatched_order"
                    app:layout_constraintEnd_toStartOf="@+id/progressId3"
                    app:layout_constraintStart_toEndOf="@id/progressId2"
                    app:layout_constraintTop_toBottomOf="@id/order_status_string" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/progressId3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_marginTop="43dp"

                    app:layout_constraintEnd_toStartOf="@id/delivered_icon"
                    app:layout_constraintStart_toEndOf="@id/dispatched_icon"
                    app:layout_constraintTop_toBottomOf="@id/order_status_string" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/delivered_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/selector_delivered_order"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/progressId3"
                    app:layout_constraintTop_toBottomOf="@id/order_status_string" />

                <RelativeLayout
                    android:id="@+id/payment_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectancle_2dp"
                    android:backgroundTint="@color/base_bg"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/packed_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginEnd="@dimen/dimen_20">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pay_on_delivery_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/pay_on_delivery"
                        android:textColor="#2A2A2A"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/scootin"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#000"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount_rs_3250"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_below="@id/pay_on_delivery_header"
                        android:textColor="#2A2A2A"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_below="@id/pay"
                        android:layout_alignParentEnd="true"
                        android:textColor="#2A2A2A"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat_medium"
                        app:setPrice="@{data.orderDetails.paymentDetails.totalAmount}" />


                </RelativeLayout>


