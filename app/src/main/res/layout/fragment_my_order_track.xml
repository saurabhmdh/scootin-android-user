                <RelativeLayout
                    android:id="@+id/store_name_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectancle_2dp"
                    android:backgroundTint="@color/base_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/payment_tab"
                    tools:ignore="RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/store_name"
                        android:textColor="#2A2A2A"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat_bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_below="@id/txt_store_name"
                        android:textColor="#2A2A2A"
                        android:textSize="13sp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_delivery_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_below="@id/store_name"
                        android:text="Delivery Detail"
                        android:textColor="#2A2A2A"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat_bold" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/delivery_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_below="@id/txt_delivery_detail"
                        android:textColor="#2A2A2A"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="#E90000"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="8dp"
                    android:text="Cancel Order"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/store_name_base" />

                <LinearLayout
                    android:id="@+id/txt_total_amt_payable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:padding="4dp"
                    android:background="@drawable/rounded_rectancle_2dp"
                    android:backgroundTint="@color/base_bg"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cancel_button">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Charges Details"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#000" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charges"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#000" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingStart="0dp"
                            android:paddingEnd="5dp"
                            android:layout_centerVertical="true"
                            android:textColor="#000"
                            android:fontFamily="@font/montserrat_medium"
                            app:setPrice="@{data.orderDetails.paymentDetails.deliveryFreeAmount}" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/promo_applied"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/discount_applied"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discount Applied"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#000" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingStart="0dp"
                            android:paddingEnd="5dp"
                            android:textColor="#000"
                            android:fontFamily="@font/montserrat_medium"
                            app:setDiscountPrice="@{data.orderDetails.paymentDetails.promoDiscount}" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taxes"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#000" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="0dp"
                            android:layout_centerVertical="true"
                            android:paddingEnd="5dp"
                            android:textColor="#000"
                            app:setPrice="@{data.orderDetails.paymentDetails.totalGSTAmount}" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount Payable"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingStart="0dp"
                            android:paddingEnd="5dp"
                            android:layout_centerVertical="true"
                            android:textColor="#000"
                            android:fontFamily="@font/montserrat_bold"
                            android:textStyle="bold"
                            app:setPrice="@{data.orderDetails.paymentDetails.totalAmount}" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/total_saving_tab"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/rounded_rectancle_2dp"
                        android:backgroundTint="#008194">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_total_savings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Total Savings"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/total_saving_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingEnd="5dp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            app:setDiscountPrice="@{data.orderDetails.paymentDetails.totalSaving}" />
                    </RelativeLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_change_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="#E90000"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="8dp"
                    android:text="Change Payment Mode"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/store_name_base" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginEnd="20dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectancle_2dp"
                    android:backgroundTint="@color/base_bg"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/txt_total_amt_payable" >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Details"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="#000"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/orderList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>