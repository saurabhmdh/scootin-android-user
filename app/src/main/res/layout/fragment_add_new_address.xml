<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:src="@drawable/ic_addresses_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/default_delivery_text_view"
        style="@style/custom_font_style_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="@string/default_delivery_address"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile" />


    <View
        android:id="@+id/line_new_address"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#595959"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/default_delivery_text_view"/>

    <!-- name, email and mobile number support -->
    <LinearLayout
        android:id="@+id/root_name"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@id/line_new_address"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_text_view"
        style="@style/custom_font_style_black"
        android:layout_width="@dimen/address_width"
        android:layout_height="30dp"
        android:text="@string/name"
        android:textColor="#616161"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/name_edit_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/dimen_10"
        android:background="@null"
        android:hint="@string/edittxt_user_name"
        android:maxLines="1"
        android:layout_weight="1"
        android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#595959"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/root_name"/>

    <LinearLayout
        android:id="@+id/root_mobile"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/root_name"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mobile_text_view"
            style="@style/custom_font_style_black"
            android:layout_width="@dimen/address_width"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Phone No."
            android:textColor="#616161"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mobile_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:background="@null"
            android:hint="@string/edittxt_user_mob_no"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="15sp"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#595959"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/root_mobile"/>

    <LinearLayout
        android:id="@+id/root_email"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/root_mobile"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/email_text_view"
            style="@style/custom_font_style_black"
            android:layout_width="@dimen/address_width"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Email ID"
            android:textColor="#616161"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="@dimen/dimen_10"
            android:hint="@string/edittxt_user_email"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="15sp"
            android:layout_weight="1" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#595959"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/root_email"/>
    <!-- completed -->

    <LinearLayout
        android:id="@+id/root_address"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/root_email"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/default_address_text_view"
            style="@style/custom_font_style_black"
            android:layout_width="@dimen/address_width"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/address"
            android:textColor="#616161"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/entered_address_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="@dimen/dimen_10"
            android:hint="@string/edittxt_user_address"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="15sp"
            android:layout_weight="1" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#595959"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/root_address"/>


    <LinearLayout
        android:id="@+id/root_area"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/root_address"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/default_area_text_view"
            android:layout_width="@dimen/address_width"
            android:layout_height="wrap_content"
            android:text="@string/area"
            style="@style/custom_font_style_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#616161" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/entered_area_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:textSize="15sp"
            android:padding="2dp"
            android:maxLines="1"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/edittxt_user_area" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#595959"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/root_area"/>

    <LinearLayout
        android:id="@+id/root_city"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/root_area"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/default_city_text_view"
            android:layout_width="@dimen/address_width"
            android:layout_height="wrap_content"
            android:text="@string/city"
            style="@style/custom_font_style_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#616161"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/root_area" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/entered_city_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:textSize="15sp"
            android:maxLines="1"
            android:padding="2dp"
            android:background="@null"
            android:layout_weight="1"
            android:hint="@string/edittxt_user_city" />

        <!--TODO Default Pin Address Layout-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/default_pin_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pin"
            style="@style/custom_font_style_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#616161" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/entered_pin_edit_text"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="@dimen/dimen_10"
            android:hint="@string/edittxt_user_pin"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="number"
            android:padding="2dp"
            android:textSize="15sp" />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#595959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_city" />

    <!--TODO Default Delivery State Layout-->

    <LinearLayout
        android:id="@+id/root_state"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/root_city"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/default_state_text_view"
        android:layout_width="@dimen/address_width"
        android:layout_height="wrap_content"
        android:text="@string/state"
        style="@style/custom_font_style_black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#616161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_city" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/state_adapter"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/default_state_text_view"
        app:layout_constraintTop_toBottomOf="@id/root_city"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#595959"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/root_state"/>

    <!--TODO Default Radio Button Home Layout-->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_state">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/home_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Home"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_regular" />

        <!--TODO Default Radio Button office Layout-->

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/office_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Office"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_regular"/>

        <!--TODO Default Radio Button Other Layout-->

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/other_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Other"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_regular"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/set_as_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set as default"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/address_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_as_default"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/ic_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>