<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="data"
            type="com.scootin.network.response.citywide.CityWideOrderResponse"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@drawable/ic_top_banner_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_back"
            android:padding="16dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Order"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/top_band"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rounded_rectancle_2dp"
                        android:backgroundTint="#008194"
                        android:padding="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/OrderID"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        app:setToIntText="@{data.id}" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/help_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_help_button" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/order_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_order_id"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="@dimen/dimen_20"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/order_status_string"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="@string/order_has_been_placed"
                        android:textColor="#000"
                        android:fontFamily="@font/montserrat_bold"
                        android:background="@drawable/rounded_rectancle_2dp"
                        android:backgroundTint="@color/base_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/top_band" />

                    <RelativeLayout
                        android:id="@+id/payment_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectancle_2dp"
                        android:backgroundTint="@color/base_bg"
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@id/order_status_string"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/dimen_20">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pay_on_delivery_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="@string/pay_on_delivery"
                            android:textColor="#2A2A2A"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/scootin"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#000"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pay_now"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="12sp"
                            android:layout_alignParentEnd="true"
                            android:text="Pay Now"
                            android:padding="4dp"
                            android:visibility="gone"
                            app:fontFamily="@font/montserrat_bold"
                            android:background="#E90000"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/white"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/amount_rs_3250"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_below="@id/pay_on_delivery_header"
                            android:textColor="#2A2A2A"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_below="@id/pay"
                            android:layout_alignParentEnd="true"
                            android:textColor="#2A2A2A"
                            android:textSize="13sp"
                            android:fontFamily="@font/montserrat_medium"
                            app:setPrice="@{data.paymentDetails.totalAmount}" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/store_name_base"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:padding="5dp"
                        android:background="@drawable/rounded_rectancle_2dp"
                        android:backgroundTint="@color/base_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/payment_tab"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup Address"
                            android:textColor="#2A2A2A"
                            android:textSize="13sp"
                            android:fontFamily="@font/montserrat_bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@id/txt_store_name"
                            setOneLineAddress="@{data.pickupAddressDetails}"
                            android:textColor="#2A2A2A"
                            android:textSize="13sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_delivery_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_below="@id/store_name"
                            android:text="Delivery Address"
                            android:textColor="#2A2A2A"
                            android:textSize="13sp"
                            android:fontFamily="@font/montserrat_bold" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/delivery_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@id/txt_delivery_detail"
                            android:textColor="#2A2A2A"
                            app:setOneLineAddress="@{data.deliveryAddressDetails}"
                            android:textSize="13sp"/>

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/bg_rectangle"
                        android:backgroundTint="#E90000"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="8dp"
                        android:text="Cancel Order"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/store_name_base" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_change_payment_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/bg_rectangle"
                        android:backgroundTint="#E90000"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="8dp"
                        android:text="Change Payment Mode"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/store_name_base" />

                    <androidx.appcompat.widget.AppCompatImageView
