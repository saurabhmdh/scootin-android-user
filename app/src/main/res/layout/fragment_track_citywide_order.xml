<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="data"
            type="com.scootin.network.response.citywide.CityWideOrderResponse"/>

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/order_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_order_history_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_arrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="@string/OrderID"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_header" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/dimen_20"
            app:setToIntText="@{data.id}"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txt_order_id"
            app:layout_constraintTop_toBottomOf="@id/order_header" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/help_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:src="@drawable/ic_help_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_header" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="@dimen/dimen_20"
            android:background="#D6DDFF"
            app:setDateFromOrderDate="@{data.orderDate}"
            android:gravity="center|start"
            android:paddingStart="5dp"
            android:textColor="#4E4E4E"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_id"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/gradient_band"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/dimen_20"
            android:src="@drawable/ic_gradient_band"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_date_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_status_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:gravity="center"
            android:text="@string/order_not_confirm_by_rider"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/gradient_band"
            app:layout_constraintTop_toTopOf="@id/gradient_band" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pay_now"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/order_status_string"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_pay_now_button"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_pickup_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            setOneLineAddress="@{data.pickupAddressDetails}"
            android:drawableStart="@drawable/ic_pickup_location_icon"
            android:drawablePadding="5dp"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pay_now" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_pickup_location"
            app:srcCompat="@drawable/ic_directional_arrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delivery_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:drawablePadding="3dp"
            android:lines="2"
            android:gravity="center_vertical"

            android:drawableStart="@drawable/ic_delivery_location_icon"
            app:setOneLineAddress="@{data.deliveryAddressDetails}"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_arrow" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginTop="25dp"
            android:text="@string/scootin"
            android:textColor="#E60000"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delivery_address" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="209dp"
            android:layout_marginTop="25dp"
            android:text="@string/wallet"
            android:textColor="#2A2A2A"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delivery_address" />


        <RelativeLayout
            android:id="@+id/total_amount_base"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:background="#D6DDFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delivery_address"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlSymmetry" >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:paddingStart="5dp"
                android:text="@string/amount_rs_3250"
                android:textColor="#2A2A2A"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:paddingStart="5dp"
                app:setPrice="@{data.paymentDetails.totalAmount}"
                android:textColor="#2A2A2A"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/txt_total_amount" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_cancel_order_button_active"/>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/orderList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/dimen_10"
            app:setImage="@{data.media.url}"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/total_amount_base" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>