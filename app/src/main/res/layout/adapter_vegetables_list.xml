<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp">

    <data>

        <variable
            name="data"
            type="com.scootin.view.vo.ProductSearchVO"/>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:outlineAmbientShadowColor="#d3d3d3"
        app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_rectangle"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            app:setImage="@{data.productImage}"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_item_bg_band" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@{data.title}"
            android:textAllCaps="true"
            android:textColor="#a9a9a9"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="4dp"
            android:text="@{data.description}"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_regular"
            app:setPrice="@{data.price}"
            android:textColor="#a9a9a9"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/detail" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/scootin_logo"
            android:layout_width="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:srcCompat="@drawable/ic_scootin_logo_only"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/discountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_regular"
            android:singleLine="true"
            app:setPrice="@{data.discountPrice}"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintStart_toEndOf="@+id/scootin_logo" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inactive_add"
            android:layout_width="83dp"

            android:layout_height="26dp"
            android:text="Add"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/inactive_button_background"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />
        <RelativeLayout
            android:id="@+id/parent_count"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView

                android:id="@+id/addItem"
                android:layout_width="83dp"
                android:layout_height="26dp"
                android:text="Add"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:background="@drawable/button_background"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" />


            <LinearLayout
                android:id="@+id/operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/decrement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_minus_bttn" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/increment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_plus_bttn" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
